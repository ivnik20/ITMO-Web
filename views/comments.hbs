<link href="styles/form.css" rel="stylesheet">
<h2 class="content_h2">Предложить книгу для добавления:</h2>
<form>
    <input type="text" name="name" class="type-1 book_form" id="author" placeholder="Автор" required autocomplete="off"/>
    <input type="text" name="name" class="type-1 book_form" id="book" placeholder="Название книги" required autocomplete="off"/>
    <textarea name="message" rows="2" class="type-1 book_form" id="description" placeholder="Комментарий" required autocomplete="off"></textarea>
</form>
<button class = "button" id="submit" onclick="saveComment()"> Отправить </button>
<table id="table" class="table" overflow="auto">
    <thead>
    <tr class="tr-header tr">
        <th>Имя</th>
        <th>Книга</th>
        <th>Комментарий</th>
    </tr>
    </thead>
</table>
<img id = "preloader" class="picture" src="Images/loading.gif">
<script src="scripts/mockComments.js"></script>